<%- include("header"); -%>
<div class="container" style="vertical-align: center">
  <h1 class="text-center" style="margin: 25px">Edit Post</h1>
  <form class="" action="/editPost/<%=post.id%>" method="post">
    <div
      class="card box-shadow form-group mx-auto mw-50"
      style="margin-bottom: 20px"
    >
      <div class="card-header">
        <h4>Title</h4>
        <input
          class="form-control"
          type="text"
          name="title"
          value="<%-post.title %>"
          minLength="1" 
          maxlength="40"
          required
        />
        <h6 style="margin-top: 5px">Date: <%-post.date %></h6>
      </div>
      <div class="card-body">
        <h4>Post</h4>
        <textarea class="form-control" name="content" rows="5" cols="30" minLength="1" maxlength="1000" required>
<%-post.content %></textarea>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
        <button
          class="btn btn-primary"
          style="margin-top: 10px"
          type="submit"
          name="button"
        >
          Edit
        </button>
        <% if(status === 401){ %>
          <p style="color: red">Error: Title and Post content cannot be empty</p>
        <% } %>
      </div>
    </div>
  </form>
</div>

<%- include("footer"); -%>
